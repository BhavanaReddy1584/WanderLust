<% layout("/layouts/boilerplate") %>

<style>
  /* FILTER SLIDER */
  .filter-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  #filters {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    white-space: nowrap;
    scrollbar-width: none;
    padding: 1rem 0;
    align-items: center;
    flex: 1; /* IMPORTANT */
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }

  .scroll-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0 0.5rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }
</style>

<!-- FILTER SLIDER -->
<div class="filter-wrapper">

  <button class="scroll-btn left">&#10094;</button>

  <!-- SCROLLABLE FILTERS (UNCHANGED) -->
  <div id="filters">

    <a href="/listings?category=Trending" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>

    <a href="/listings?category=Rooms" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=Iconic Cities" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>

    <a href="/listings?category=Castles" class="filter text-decoration-none text-dark">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>

    <a href="/listings?category=Mountains" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>

    <a href="/listings?category=Amazing Pools" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>

    <a href="/listings?category=Camping" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>

    <a href="/listings?category=Farms" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>

    <a href="/listings?category=Arctic" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </a>

    <a href="/listings?category=Houses" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Houses</p>
    </a>

    <a href="/listings?category=Nature" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-leaf"></i></div>
      <p>Nature</p>
    </a>

    <a href="/listings?category=Desert" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-sun"></i></div>
      <p>Desert</p>
    </a>

    <a href="/listings?category=Beach" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </a>

    <a href="/listings?category=Lakes" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-water"></i></div>
      <p>Lakes</p>
    </a>

    <a href="/listings?category=Tropical" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Tropical</p>
    </a>

    <a href="/listings?category=Countryside" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Countryside</p>
    </a>

    <a href="/listings?category=Vineyards" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-wine-glass"></i></div>
      <p>Vineyards</p>
    </a>

    <a href="/listings?category=Islands" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Islands</p>
    </a>

    <a href="/listings?category=Historical" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-landmark"></i></div>
      <p>Historical</p>
    </a>

    <a href="/listings?category=Sustainable" class="filter text-decoration-none text-dark">
      <div><i class="fa-solid fa-recycle"></i></div>
      <p>Sustainable</p>
    </a>

  </div>

  <button class="scroll-btn right">&#10095;</button>

  <!-- FIXED TOGGLE (OUTSIDE SCROLL) -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>

</div>

<!-- LISTINGS GRID -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="d-block text-decoration-none text-dark">
        <div class="card h-100 position-relative listing-card">

          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="<%= listing.title %>"
            style="height: 20rem; object-fit: cover;"
          />

          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">
              &#8377; <%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %> / night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>

        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });
</script>
