<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Tile looks good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea 
          name="listing[description]" 
          class="form-control" 
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="listing[category]" class="form-select" required>
        <option value="">Select category</option>
        <option value="Trending">Trending</option>
        <option value="Rooms">Rooms</option>
        <option value="Iconic Cities">Iconic Cities</option>
        <option value="Castles">Castles</option>
        <option value="Mountains">Mountains</option>
        <option value="Amazing Pools">Amazing Pools</option>
        <option value="Camping">Camping</option>
        <option value="Farms">Farms</option>
        <option value="Arctic">Arctic</option>
        <option value="Houses">Houses</option>
        <option value="Nature">Nature</option>
        <option value="Desert">Desert</option>
        <option value="Beach">Beach</option>
        <option value="Lakes">Lakes</option>
        <option value="Tropical">Tropical</option>
        <option value="Countryside">Countryside</option>
        <option value="Vineyards">Vineyards</option>
        <option value="Islands">Islands</option>
        <option value="Historical">Historical</option>
        <option value="Sustainable">Sustainable</option>
      </select>
    </div>


      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
        />
        required
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price entered should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Hyderabad, Telangana"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location entered should be valid</div>
      </div>
      <button class="btn btn-dark add-btn mt-3">Submit</button>
    </form>
  </div>
</div>
